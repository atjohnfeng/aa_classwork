<h1>Add a Cat</h1>
<form action="/cats" method="post">
    <label for="name">Name</label>
        <input id="name" type="text" name="cat[name]"><br>
    <label for="color">Color</label>
        <select id="color" type="text" name="cat[color]">
            <option disabled selected>Please Select</option>
            <option value='gold'>Gold</option>
            <option value='gray'>Gray</option>
            <option value='white'>White</option>
            <option value='black'>Black</option>
            <option value='orange'>Orange</option>
        </select><br>
    <label for='sex'>Sex</label>
        <select id='sex' type='text' name='cat[sex]'>
            <option disabled selected>Please Select</option>
            <option value='M'>Male</option>
            <option value='F'>Female</option>
        </select><br>
    <label for='birth_date'>Birth Date</label>
        <input id='birth_date' type='date' name='cat[birth_date]'><br>
    <label for='description'>Description</label>
        <textarea id='description' type='text' name=cat[description]></textarea><br>
    <input type="submit" value="Add Cat">
</form>